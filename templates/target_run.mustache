<div class="collapsible-heading">
  <textarea id="{{queryId}}">{{JSON.stringify(test.query, null, 2)}}</textarea>

  {{!
    // FIXME: This isn't ready for prime time:
    // ` (<a href="javascript:void(copyQueryToClipboard('${queryId}'))" title="Copy query to clipboard" class="copy-to-clipboard">ES query</a>) `,
  }}

  <span class="target-run-heading" title="{{run.commit_description}}">
    <span class="target-run-version">
      {{#run.change_url}}
        <a href="{{run.change_url}}" target="_blank">{{run.app_version}}</a>
      {{/run.change_url}}
      {{^run.change_url}}
        {{run.app_version}}
      {{/run.change_url}}
    </span>
    {{run.commit_date_formatted}}: {{run.commit_description}}:</span>
  </span>

  <span class="score">score {{metric_score_formatted}}</span>
  <span class="elapsed">{{elapsed}}ms elapsed</span>

  Found {{found}} of {{target.relevant_length}} in {{count}} total hits.
</div>

<div class="collapsible-content animate-opacity">
  <p>
    {{#count}}
      Hits <label class="highlights-control-label"><input type="checkbox" class="highlights-control" /> Show matching fields</label>
      <ol>
      {{#matching_documents}}
        <li{{#within_metric}} class="within-metric"{{/within_metric}}>

          <span class="hit-found-icon">
            {{#relevant}}â˜‘ {{/relevant}}
          </span>
          <a href="https://www.nypl.org/research/research-catalog/bib/{{_id}}">{{_id}}: {{_source.title}}{{#_source.creatorLiteral}} ({{_source.creatorLiteral}}){{/_source.creatorLiteral}}</a>

          <ul class="highlights animate-opacity">
          {{#highlight}}
            <li>
              <span>{{field}}</span>
              {{#values}}{{{.}}} {{/values}}
            </li>
          {{/highlight}}
          </ul>

        </li>
      {{/matching_documents}}
      </ol>
    {{/count}}
    {{^count}}
      No hits
    {{/count}}
  </p>
</div>
